
    <div class="container-fluid">

        <h4>Contadores</h4>


        <div class="panel panel-default table-responsive" id="contadores-panel">

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Número</th>
                        <th>Nombre</th>
                        <th>Marca</th>
                        <th>Modelo</th>
                        <th>Ubicación</th>
                        <th>Fecha revisión</th>
                        <th>Máximo</th>
                        <th>Mínimo</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (i in contadores) { %>
                        <tr>

                            <td><%= contadores[i].codigo %></td>
                            <td><%= contadores[i].nombre %></td>
                            <td><%= contadores[i].marca %></td>
                            <td><a href="/contadores/<%= contadores[i].id %>"><%= contadores[i].modelo %> </a></td>
                            <td><a href="/contadores/<%= contadores[i].id %>"><%= contadores[i].ubicacion %> </a></td>
                            <td><a href="/contadores/<%= contadores[i].id %>"><%= contadores[i].fecha_revision %> </a></td>
                            <td><a href="/contadores/<%= contadores[i].id %>"><%= contadores[i].maximo %> </a></td>
                            <td><a href="/contadores/<%= contadores[i].id %>"><%= contadores[i].minimo %> </a></td>
                            <% if (session.user) {
                                if (session.user.isAdmin) {%>
                                    <td><a href="/contadores/<%= contadores[i].id %>/edit"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
                                    <td>
                                        <form method="post" action="contadores/<%= contadores[i].id %>/destroy?_method=delete">
                                            <button class="btn btn-danger btn-sm" type="submit" onClick="return confirm('Borrar: <%= contadores[i].nombre %>');">
                                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                            </button>
                                        </form>
                                    </td>
                                <%}%>
                            <%}%>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <% if (session.user) {
            if (session.user.isAdmin) {%>
                <p><a href="/contadores/new"><button type="button" class="btn btn-primary">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Crear contador</button></a>
                    <a href="/contadores/page"><button type="button" class="btn btn-primary">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Mas Resultados</button></a>
                </p>
            <%}%>
        <%}%>

    </div>

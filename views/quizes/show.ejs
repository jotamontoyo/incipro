
<div class="container">

	<form class="form-horizontal">
		<div class="form-group">

			<h4>Parte nº: <%= quiz.id %> </h4>
			<h4>Fecha: <%= quiz.dia %>-<%= quiz.mes %>-<%= quiz.any %> </h4>
			<h4>Usuario: <%= quiz.UserName %> </h4>
<!--			<h4>Proveedor: <%= quiz.proveedor %> </h4>
			<h4>Status: <%= quiz.proceso %> </h4> -->

		</div>
	</form>


	<div class="container">

		<p><strong>Contadores:</strong></p>

				<% for (var index in comments) {%>

					<div class="col-sm-4">

						<% if (!session.user && comments[index].publicado) {%>

							<div class="comment-panel">

								<div class="container-fluid">

									<div class="form-group">

										<h5>id: <%= comments[index].id %></h5>
										<h5>Código: <%= comments[index].codigo %></h5>
										<h5>Nombre: <%= comments[index].nombre %></h5>
										<h5>Lectura: <%= comments[index].lectura_actual %></h5>

									</div>

								</div>
								<div class="container-fluid">
									<h6><span class="badge">#<%= comments[index].id %></span>
									<small><%= comments[index].createdAt.toLocaleString() %></small></h6>
								</div>
							</div>
						<%}%>
						<% if (session.user) {%>
							<div class="comment-panel">

								<div class="container-fluid">

									<% if ((session.user.isAdmin || (session.user && quiz.UserId === session.user.id))) {%>


										<h5><span class="badge">#<%=comments[index].id%></span></h5>
										<h4 class="text-center"><%= comments[index].nombre %></h4>
										<h5>Número: <%= comments[index].codigo %></h5>
										<h5>Ubicación: <%= comments[index].ubicacion %></h5>


										<form method="post" action="/quizes/<%=quiz.id%>/comments/<%=comments[index].id%>/update?_method=put">

											<input type="text" class="form-control hidden" id="codigo" name="comment[codigo]" value="<%=comments[index].codigo%>" pattern="[0-9]{1,}"/></h5>

											<div class="form-group">
												<div class="col-md-3" style="margin-top: 6px;">
													<label for="lectura_actual">Lectura</label>
												</div>
												<div class="col-md-9">
													<input type="text" class="form-control" id="lectura_actual" name="comment[lectura_actual]" value="<%=comments[index].lectura_actual%>" pattern="[0-9]{1,}"/>
												</div>
											</div>


											<div class="col-md-12">

					                            <div class="panel-group" id="agregar-comentario" role="tablist" aria-multiselectable="true">

					                                <div class="faq">
					                                    <div class="panel-heading" role="tab" id="agregar">
					                                        <h4 class="panel-title">
					                                            <a id="ver-textaera" role="button" data-toggle="collapse" data-parent="#agregar-comentario" href="#<%=comments[index].id%>" aria-expanded="true" aria-controls="collapseOne">
					                                                Añadir comentarios&nbsp;&nbsp;<i class="fa fa-arrow-down"></i>
					                                            </a>
					                                        </h4>
					                                    </div>
					                                    <div id="<%=comments[index].id%>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="agregar">
					                                        <div class="panel-body">

					                                            <div class="form-group">

					                			    				<textarea class="form-control comment-row" rows="5" name="comment[texto]"><%=comments[index].texto%></textarea>

					                							</div>

					                                        </div>
					                                    </div>
					                                </div>

					                            </div>
											</div>

											<button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Enviar</button>


										</form>


									<%} else if (comments[index].publicado) {%>


										<h5><span class="badge">#<%=comments[index].id%></span></h5>
										<h5>Código: <%= comments[index].codigo %></h5>
										<h5>Nombre: <%= comments[index].nombre %></h5>
										<h5>Lectura: <%= comments[index].lectura_actual %></h5>




									<%}%>

								</div>

								<br>

								<div class="container-fluid">
									<%if ((session.user.isAdmin || (session.user && quiz.UserId === session.user.id))) {%>
							 			<%if (!comments[index].publicado) {%>
											<h6>
											<a href="/quizes/<%= quiz.id %>/comments/<%=comments[index].id%>/publish">
												<button class="btn btn-success btn-xs" data-toggle="tooltip" data-placement="top" title="Publicar">
													<span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
												</button>
											</a>
										<%} else if	(comments[index].publicado) {%>
											<a href="/quizes/<%= quiz.id %>/comments/<%=comments[index].id%>/unpublish">
												<button class="btn btn-warning btn-xs" data-toggle="tooltip" data-placement="top" title="Ocultar">
													<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
												</button>
											</a>
										<%}%>
										<a href="/quizes/<%= quiz.id %>/comments/<%=comments[index].id%>/destroy">
											<button class="btn btn-danger btn-xs" data-toggle="tooltip" data-placement="top" title="Eliminar">
												<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
											</button>
										</a>

										</h6>

									<%}%>
								</div>

							</div>
						<%}%>
					</div>
				<%}%>



<!--		<p><a href="/quizes/<%= quiz.id %>/comments/new"><button type="button" class="btn btn-primary">
			<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Nuevo comentario</button></a>
		</p> -->

	</div>

</div>

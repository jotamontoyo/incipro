
<div class="form-group">
	<label for="preg" class="col-sm-2 control-label">Fecha:</label>
	<div class="col-sm-10">
		<input type="text" class="form-control" id="fecha" name="quiz[fecha]" value="<%= quiz.fecha %>" placeholder="fecha"/>
	</div>
</div>



<div class="form-group">
	<label for="preg" class="col-sm-2 control-label">Motivo:</label>
	<div class="col-sm-10">
		<input type="text" class="form-control" id="preg" name="quiz[pregunta]" value="<%= quiz.pregunta %>" placeholder="motivo"/>
	</div>
</div>

<div class="form-group">
	<label for="preg" class="col-sm-2 control-label">Proveedor:</label>
	<div class="col-sm-10">
		<select class="form-control" id="pro" name="quiz[proveedor]">
			<% for (var index in proveedor) {%>
				<option value="<%=proveedor[index].nombre%>" <% if (quiz.proveedor===proveedor[index].nombre) {%> selected <%}%>><%=proveedor[index].nombre%></option>
			<%}%>
		</select>
	</div>
</div>

<div class="form-group">
	<label for="preg" class="col-sm-2 control-label">Centro:</label>
	<div class="col-sm-10">
		<select class="form-control" id="tema" name="quiz[tema]">
			<option value="Central" <%if (quiz.tema==="Central"){%> selected <%}%>>Central</option>
			<option value="Gala" <%if (quiz.tema==="Gala"){%> selected <%}%>>Gala</option>
			<option value="La Siesta" <%if (quiz.tema==="La Siesta"){%> selected <%}%>>La Siesta</option>
			<option value="Troya" <%if (quiz.tema==="Troya"){%> selected <%}%>>Troya</option>
		</select>
	</div>
</div>

<div class="form-group">
	<label for="preg" class="col-sm-2 control-label">Status:</label>
	<div class="col-sm-10">
		<select class="form-control" id="proceso" name="quiz[proceso]">
			<option value=true <%if (quiz.proceso){%> selected <%}%>>Abierta</option>
			<option value=false <%if (!quiz.proceso){%> selected <%}%>>Cerrada</option>
		</select>
	</div>
</div>



<div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
		<a href="/quizes">
			<button class="btn btn-danger btn-sm">
				<span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Cancelar
			</button>
		</a>
		<button class="btn btn-success btn-sm" type="submit" value="Salvar">
			<span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Grabar
		</button>
	</div>
</div>
